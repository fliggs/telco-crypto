{
	"name": "core",
	"version": "1.0.0",
	"description": "",
	"author": "",
	"private": true,
	"license": "MIT",
	"scripts": {
		"build": "nest build",
		"format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
		"start": "nest start",
		"dev": "nest start --watch",
		"dev:public": "cross-env HOST=0.0.0.0 nest start --watch",
		"dev:debug": "nest start --debug --watch",
		"prod": "node dist/main",
		"lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
		"test": "jest",
		"test:watch": "jest --watch",
		"test:cov": "jest --coverage",
		"test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
		"test:e2e": "NODE_OPTIONS=\"$NODE_OPTIONS --experimental-vm-modules\" jest --openHandlesTimeout=2000 --config ./test/jest-e2e.json",
		"deploy": "prisma migrate deploy && prisma generate --sql"
	},
	"dependencies": {
		"@apollo/server": "^4.12.2",
		"@apollo/subgraph": "^2.11.2",
		"@nestjs/apollo": "^13.1.0",
		"@nestjs/axios": "^4.0.1",
		"@nestjs/common": "^11.1.6",
		"@nestjs/config": "^4.0.2",
		"@nestjs/core": "^11.1.6",
		"@nestjs/event-emitter": "^3.0.1",
		"@nestjs/graphql": "^13.1.0",
		"@nestjs/jwt": "^11.0.0",
		"@nestjs/microservices": "^11.1.6",
		"@nestjs/platform-express": "^11.1.6",
		"@nestjs/schedule": "^6.0.0",
		"@nestjs/swagger": "^11.2.0",
		"@nestjs/terminus": "^11.0.0",
		"@nestjs/throttler": "^6.4.0",
		"@prisma/client": "^6.15.0",
		"@quixo3/prisma-session-store": "^3.1.13",
		"@solana-program/system": "^0.7.0",
		"@solana-program/token-2022": "^0.5.0",
		"@solana/kit": "^2.3.0",
		"@solana/web3.js": "^1.98.4",
		"axios": "^1.11.0",
		"bcrypt": "^6.0.0",
		"bip39": "^3.1.0",
		"class-transformer": "^0.5.1",
		"class-validator": "^0.14.2",
		"csrf-csrf": "^4.0.3",
		"customerio-node": "^4.2.0",
		"dataloader": "^2.2.3",
		"date-fns": "^4.1.0",
		"express-session": "^1.18.2",
		"graphql": "^16.11.0",
		"helmet": "^8.1.0",
