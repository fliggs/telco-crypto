		"cross-env": "^7.0.3",
		"eslint": "^9.34.0",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-prettier": "^5.5.4",
		"jest": "^29.7.0",
		"prettier": "^3.6.2",
		"prisma": "^6.15.0",
		"prisma-json-types-generator": "^3.6.0",
		"source-map-support": "^0.5.21",
		"supertest": "^7.1.4",
		"ts-jest": "^29.4.1",
		"ts-loader": "^9.5.4",
		"ts-node": "^10.9.2",
		"tsconfig-paths": "^4.2.0",
		"typescript": "^5.8.3"
	},
	"prisma": {
		"schema": "./prisma",
		"seed": "ts-node --transpile-only prisma/seed.ts"
	},
	"jest": {
		"moduleFileExtensions": [
			"js",
			"json",
			"ts"
		],
		"moduleNameMapper": {
			"^@/(.*)$": "<rootDir>/$1"
		},
		"rootDir": "src",
		"testRegex": ".*\\.spec\\.ts$",
		"transform": {
			".+\\.(t|j)s$": "ts-jest"
		},
		"collectCoverageFrom": [
			"**/*.(t|j)s"
		],
		"coverageDirectory": "../coverage",
		"testEnvironment": "node"
	}
}
