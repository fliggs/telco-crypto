		"rxjs": "^7.8.2",
		"sas-lib": "^1.0.9",
		"session-file-store": "^1.5.0"
	},
	"devDependencies": {
		"@nestjs/cli": "^11.0.10",
		"@nestjs/schematics": "^11.0.7",
		"@nestjs/testing": "^11.1.6",
		"@types/bcrypt": "^5.0.2",
		"@types/express": "^5.0.3",
		"@types/express-session": "^1.18.2",
		"@types/jest": "^29.5.14",
		"@types/js-yaml": "^4.0.9",
		"@types/jsonwebtoken": "^9.0.10",
		"@types/node": "^22.18.0",
